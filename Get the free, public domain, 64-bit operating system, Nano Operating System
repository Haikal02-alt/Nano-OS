import os
import getpass
import random

def login():
    username = getpass.getpass("NanoOS Boot Loader (Click Enter To Continue)")
    password = input("0 Old Boot Record 1 Drive C 2 Drive D Selection: ")
    if username == "skip" and password == "1":
        print("Loading")
        return True
    else:
        print("Loading")
        return True

# === Games ===

def draw_tank(name, hp):
    print(f"{name} Tank | HP: {hp}")

def tank_battle():
    player_hp = 10
    enemy_hp = 10
    print("=== Nano Tank Battle ===")
    while player_hp > 0 and enemy_hp > 0:
        draw_tank("Player", player_hp)
        draw_tank("Enemy", enemy_hp)
        action = input("Fire (f) or Defend (d)? ").lower()
        if action == "f":
            damage = random.randint(1, 3)
            enemy_hp -= damage
            print(f"You hit enemy for {damage} damage!")
        elif action == "d":
            print("You brace for impact!")
        else:
            print("Invalid action!")
        enemy_action = random.choice(["f", "d"])
        if enemy_action == "f":
            damage = random.randint(1, 3)
            if action == "d":
                damage -= 1
            player_hp -= max(damage, 0)
            print(f"Enemy hits you for {damage} damage!")
        else:
            print("Enemy defends!")
    if player_hp <= 0:
        print("üí• Your tank is destroyed! Game Over.")
    else:
        print("üî• Enemy tank destroyed! You win!")

def gunshot_game():
    player_hp = 5
    enemy_hp = 5
    bullets = 1
    enemy_bullets = 1
    print("=== Nano Gunshot Duel ===")
    while player_hp > 0 and enemy_hp > 0:
        print(f"\nPlayer HP: {player_hp} | Bullets: {bullets}")
        print(f"Enemy HP: {enemy_hp} | Bullets: {enemy_bullets}")
        action = input("Shoot (s), Dodge (d), Reload (r): ").lower()
        if action == "s":
            if bullets > 0:
                bullets -= 1
                damage = random.randint(1, 2)
                enemy_hp -= damage
                print(f"You shoot! Enemy takes {damage} damage.")
            else:
                print("Click! No bullets left.")
        elif action == "d":
            print("You dodge.")
        elif action == "r":
            bullets += 1
            print("You reload.")
        else:
            print("Invalid action!")
        enemy_action = random.choice(["s", "d", "r"])
        if enemy_action == "s":
            if enemy_bullets > 0:
                enemy_bullets -= 1
                damage = random.randint(1, 2)
                if action == "d":
                    damage = max(damage - 1, 0)
                player_hp -= damage
                print(f"Enemy shoots! You take {damage} damage.")
            else:
                print("Enemy clicks! No bullets left.")
        elif enemy_action == "d":
            print("Enemy dodges.")
        elif enemy_action == "r":
            enemy_bullets += 1
            print("Enemy reloads.")
    if player_hp <= 0:
        print("üí• You were shot down! Game Over.")
    else:
        print("üî• Enemy defeated! You win!")

def space_fight():
    player_hp = 8
    enemy_hp = 8
    print("=== Nano Space Fight ===")
    while player_hp > 0 and enemy_hp > 0:
        print(f"Player HP: {player_hp} | Enemy HP: {enemy_hp}")
        action = input("Laser (l), Shield (s), Warp (w): ").lower()
        if action == "l":
            damage = random.randint(2, 4)
            enemy_hp -= damage
            print(f"You fire lasers! Enemy takes {damage} damage.")
        elif action == "s":
            print("You raise shields.")
        elif action == "w":
            print("You warp evasively.")
        else:
            print("Invalid action!")
        enemy_action = random.choice(["l", "s", "w"])
        if enemy_action == "l":
            damage = random.randint(2, 4)
            if action == "s":
                damage -= 2
            player_hp -= max(damage, 0)
            print(f"Enemy fires lasers! You take {damage} damage.")
        elif enemy_action == "s":
            print("Enemy raises shields.")
        elif enemy_action == "w":
            print("Enemy warps evasively.")
    if player_hp <= 0:
        print("üöÄ Your ship is destroyed! Game Over.")
    else:
        print("üåå Enemy ship destroyed! Victory!")

def race_car_game():
    player_pos = 0
    enemy_pos = 0
    finish_line = 20
    print("=== Nano Race Car ===")
    while player_pos < finish_line and enemy_pos < finish_line:
        print(f"Player position: {player_pos} | Enemy position: {enemy_pos}")
        action = input("Accelerate (a), Brake (b), Nitro (n): ").lower()
        if action == "a":
            player_pos += random.randint(1, 3)
            print("You accelerate forward!")
        elif action == "b":
            player_pos += 0
            print("You brake.")
        elif action == "n":
            player_pos += random.randint(2, 5)
            print("Nitro boost!")
        else:
            print("Invalid action!")
        enemy_action = random.choice(["a", "b", "n"])
        if enemy_action == "a":
            enemy_pos += random.randint(1, 3)
            print("Enemy accelerates.")
        elif enemy_action == "b":
            print("Enemy brakes.")
        elif enemy_action == "n":
            enemy_pos += random.randint(2, 5)
            print("Enemy uses nitro!")
    if player_pos >= finish_line and enemy_pos >= finish_line:
        print("üèÅ It's a tie!")
    elif player_pos >= finish_line:
        print("üèÜ You win the race!")
    else:
        print("üí® Enemy wins the race!")

def nanocraft():
    print("=== NanoCraft ===")
    print("Commands: mine, build, inventory, exit")
    inventory = []

    while True:
        action = input("nanocraft> ").lower()

        if action == "mine":
            resource = random.choice(["wood", "stone", "iron"])
            inventory.append(resource)
            print(f"You mined {resource}.")
        elif action == "build":
            if "wood" in inventory and "stone" in inventory:
                print("You built a hut!")
                inventory.remove("wood")
                inventory.remove("stone")
            elif "stone" in inventory and "iron" in inventory:
                print("You built a forge!")
                inventory.remove("stone")
                inventory.remove("iron")
            else:
                print("Not enough resources to build.")
        elif action == "inventory":
            print("Inventory:", inventory if inventory else "Empty")
        elif action == "exit":
            print("Leaving NanoCraft...")
            break
        else:
            print("Unknown action.")

def hacking_tool():
    print("=== Nano HackSim ===")
    secret = "nano123"
    attempts = 3
    while attempts > 0:
        guess = input("Enter password guess: ")
        if guess == secret:
            print("‚úÖ Access Granted! You hacked the system.")
            return
        else:
            attempts -= 1
            print(f"‚ùå Wrong password! Attempts left: {attempts}")
    print("üíÄ System locked. Hack failed.")

def feed_the_dog():
    print("=== Feed the Dog ===")
    hunger = 5
    while hunger > 0:
        print(f"Dog hunger level: {hunger}")
        action = input("Give food (f), Play (p), Ignore (i): ").lower()
        if action == "f":
            hunger -= 2
            print("üêï The dog eats happily!")
        elif action == "p":
            hunger -= 1
            print("üêï The dog plays but still feels hungry.")
        elif action == "i":
            hunger += 1
            print("üò¢ The dog whines, hunger increases.")
        else:
            print("Unknown action.")
        if hunger <= 0:
            print("üéâ The dog is full and happy! You win!")
            break
        if hunger > 8:
            print("üíÄ The dog ran away because it was too hungry. Game Over.")
            break
def chess_game():
    print("=== Nano Chess ===")
    board = [
        ["r","n","b","q","k","b","n","r"],
        ["p","p","p","p","p","p","p","p"],
        [" "," "," "," "," "," "," "," "],
        [" "," "," "," "," "," "," "," "],
        [" "," "," "," "," "," "," "," "],
        [" "," "," "," "," "," "," "," "],
        ["P","P","P","P","P","P","P","P"],
        ["R","N","B","Q","K","B","N","R"]
    ]

    def print_board():
        print("  a b c d e f g h")
        for i, row in enumerate(board):
            print(8-i, " ".join(row), 8-i)
        print("  a b c d e f g h")

    turn = "white"
    while True:
        print_board()
        move = input(f"{turn}'s move (e.g., e2 e4 or 'exit'): ").lower()
        if move == "exit":
            print("Exiting Nano Chess...")
            break
        try:
            src, dst = move.split()
            sx, sy = ord(src[0]) - ord("a"), 8 - int(src[1])
            dx, dy = ord(dst[0]) - ord("a"), 8 - int(dst[1])
            piece = board[sy][sx]
            if piece == " ":
                print("No piece at source!")
                continue
            board[dy][dx] = piece
            board[sy][sx] = " "
            turn = "black" if turn == "white" else "white"
        except Exception:
            print("Invalid move format! Use like 'e2 e4'.")

def titanium_game():
    print("=== Titanium: Plane Shooting Game ===")
    player_hp = 12
    enemy_hp = 12

    while player_hp > 0 and enemy_hp > 0:
        print(f"\nPlayer HP: {player_hp} | Enemy HP: {enemy_hp}")
        action = input("Shoot (s), Evade (e), Repair (r): ").lower()

        if action == "s":
            damage = random.randint(2, 4)
            enemy_hp -= damage
            print(f"üí• You fire missiles! Enemy takes {damage} damage.")
        elif action == "e":
            print("üåÄ You perform evasive maneuvers.")
        elif action == "r":
            heal = random.randint(1, 3)
            player_hp += heal
            print(f"üîß You repair your plane, restoring {heal} HP.")
        else:
            print("Invalid action!")

        # Enemy turn
        enemy_action = random.choice(["s", "e", "r"])
        if enemy_action == "s":
            damage = random.randint(2, 4)
            if action == "e":
                damage -= 2  # evasion reduces damage
            player_hp -= max(damage, 0)
            print(f"üí• Enemy fires! You take {damage} damage.")
        elif enemy_action == "e":
            print("üåÄ Enemy evades your attack.")
        elif enemy_action == "r":
            heal = random.randint(1, 3)
            enemy_hp += heal
            print(f"üîß Enemy repairs their plane, restoring {heal} HP.")

    if player_hp <= 0:
        print("üî• Your plane was shot down! Game Over.")
    else:
        print("üèÜ Enemy plane destroyed! You win!")

def fake_robux_generator():
    print("=== Fake Robux Generator ===")
    robux = 0
    while True:
        action = input("Generate (g), Spend (s), Exit (e): ").lower()
        if action == "g":
            gain = random.randint(10, 100)
            robux += gain
            print(f"üí∞ You generated {gain} fake Robux! Total: {robux}")
        elif action == "s":
            cost = random.randint(5, 50)
            if robux >= cost:
                robux -= cost
                print(f"üõí You spent {cost} fake Robux. Remaining: {robux}")
            else:
                print("‚ùå Not enough fake Robux!")
        elif action == "e":
            print("Exiting Fake Robux Generator...")
            break
        else:
            print("Unknown action.")

def nano_graphics_demo():
    print("=== Nano OS 16-Color Graphics Demo ===")
    colors = [
        (30,"Black"), (31,"Red"), (32,"Green"), (33,"Yellow"),
        (34,"Blue"), (35,"Magenta"), (36,"Cyan"), (37,"White"),
        (90,"Bright Black"), (91,"Bright Red"), (92,"Bright Green"),
        (93,"Bright Yellow"), (94,"Bright Blue"), (95,"Bright Magenta"),
        (96,"Bright Cyan"), (97,"Bright White")
    ]
    for code, name in colors:
        print(f"\033[{code}m‚ñà {name}\033[0m")

def elephant_simulator():
    elephant_ascii = r"""
       /\  ___  /\
      // \/   \/ \\
     ((    O O    ))
      \\ /     \ //
       \/  | |  \/ 
        |  | |  |  
        |  | |  |  
        |   o   |  
        | |   | |  
        |m|   |m|
    """

    print("=== Elephant Simulator ===")
    print(elephant_ascii)
    hunger = 5
    happiness = 5

    while True:
        print(f"\nElephant Hunger: {hunger} | Happiness: {happiness}")
        action = input("Feed (f), Play (p), Rest (r), Exit (e): ").lower()

        if action == "f":
            hunger = max(hunger - 2, 0)
            print("üçå You feed the elephant bananas. It looks happy!")
        elif action == "p":
            happiness += 2
            hunger += 1
            print("üéâ You play with the elephant. It trumpets loudly!")
        elif action == "r":
            hunger += 1
            happiness = max(happiness - 1, 0)
            print("üí§ The elephant rests peacefully.")
        elif action == "e":
            print("Exiting Elephant Simulator...")
            break
        else:
            print("Unknown action.")

        # End conditions
        if hunger >= 10:
            print("üíÄ The elephant ran away because it was too hungry. Game Over.")
            break
        if happiness >= 12:
            print("üèÜ The elephant loves you! You win!")
            break

def nano_casino():
    print("=== Nano Casino ===")
    coins = 10
    while coins > 0:
        print(f"Coins: {coins}")
        action = input("Spin (s) or Exit (e): ").lower()
        if action == "s":
            coins -= 1
            slots = [random.choice(["üçí","üçã","üîî","‚≠ê","7"]) for _ in range(3)]
            print(" | ".join(slots))
            if len(set(slots)) == 1:
                win = 5
                coins += win
                print(f"üéâ Jackpot! You win {win} coins!")
            elif len(set(slots)) == 2:
                win = 2
                coins += win
                print(f"‚ú® Small win! You win {win} coins.")
            else:
                print("‚ùå No win this time.")
        elif action == "e":
            print("Leaving Nano Casino...")
            break
        else:
            print("Unknown action.")
    print("Game Over. No coins left!")

def nano_zoo():
    print("=== Nano Zoo ===")
    pets = {
        "dog": "üêï Woof!",
        "cat": "üêà Meow!",
        "elephant": "üêò Trumpet!",
        "lion": "ü¶Å Roar!"
    }
    while True:
        choice = input("Choose pet (dog, cat, elephant, lion, exit): ").lower()
        if choice in pets:
            print(pets[choice])
        elif choice == "exit":
            print("Leaving Nano Zoo...")
            break
        else:
            print("Unknown pet.")

def nano_hackersim():
    print("=== Nano HackerSim ===")
    steps = ["Connecting to server...", "Bypassing firewall...", "Decrypting password...", "Access granted!"]
    for step in steps:
        print(step)
        input("Press Enter to continue...")
    print("üéâ You completed the hack simulation!")

def nano_treasure_hunt():
    print("=== Nano Treasure Hunt ===")
    treasures = ["Gold Coin", "Silver Sword", "Magic Potion", "Ancient Map"]
    found = []
    while True:
        action = input("Search (s), Inventory (i), Exit (e): ").lower()
        if action == "s":
            item = random.choice(treasures)
            found.append(item)
            print(f"ü™ô You found: {item}")
        elif action == "i":
            print("Inventory:", found if found else "Empty")
        elif action == "e":
            print("Leaving Treasure Hunt...")
            break
        else:
            print("Unknown action.")
def nano_city_builder():
    print("=== Nano City Builder ===")
    resources = {"wood":0, "stone":0, "iron":0}
    city = []
    while True:
        action = input("Mine (m), Build (b), City (c), Exit (e): ").lower()
        if action == "m":
            res = random.choice(list(resources.keys()))
            resources[res] += 1
            print(f"You gathered {res}.")
        elif action == "b":
            if resources["wood"] >= 2 and resources["stone"] >= 1:
                city.append("House")
                resources["wood"] -= 2
                resources["stone"] -= 1
                print("üè† You built a house!")
            elif resources["stone"] >= 2 and resources["iron"] >= 1:
                city.append("Forge")
                resources["stone"] -= 2
                resources["iron"] -= 1
                print("‚öíÔ∏è You built a forge!")
            else:
                print("Not enough resources to build.")
        elif action == "c":
            print("City:", city if city else "Empty land")
        elif action == "e":
            print("Leaving City Builder...")
            break
        else:
            print("Unknown action.")

# === Nano OS Shell ===

def nano_os():
    print("=== Nano OS Public Domain Operating System ===")
    print("Type 'help' for commands.")
    while True:
        command = input("nano-os> ").strip().lower()
        if command == "help":
            print("Available commands: help, echo, ls, clear, shutdown, reboot, exit, tankbattle, gunshot, spacefight, racecar, about, nanoc filename, nanocraft, hacksim, feedthedog, chess, titanium, fakerobux, graphics, elephant, casino, zoo, hackersim, treasure, citybuilder")
        elif command.startswith("echo "):
            print(command[5:])
        elif command == "ls":
            files = os.listdir(".")
            for f in files:
                print(f)
        elif command == "clear":
            os.system("clear")  # use "cls" on Windows
        elif command == "shutdown":
            print("Shutting down system...")
            os.system("sudo shutdown now")
            break
        elif command == "reboot":
            print("Rebooting system...")
            os.system("sudo reboot")
            break
        elif command == "tankbattle":
            tank_battle()
        elif command == "gunshot":
            gunshot_game()
        elif command == "spacefight":
            space_fight()
        elif command == "racecar":
            race_car_game()
        elif command == "about":
            print("Nano OS: A playful command-line shell with mini-games and basic commands. Created for fun and learning, it simulates an OS environment with built-in entertainment.")
        elif command == "exit":
            print("Exiting Nano OS...")
            break
        elif command.startswith("nanoc "):
            # If you type "nanoc filename", it opens that file in GNU Nano
            filename = command[6:].strip()
            if filename:
                os.system(f"nano {filename}")
            else:
                os.system("nano")
        elif command == "hacksim":
            hacking_tool()
        elif command == "nanocraft":
            nanocraft()
        elif command == "feedthedog":
            feed_the_dog()
        elif command == "chess":
            chess_game()
        elif command == "titanium":
            titanium_game()
        elif command == "fakerobux":
            fake_robux_generator()
        elif command == "graphics":
             nano_graphics_demo()
        elif command == "elephant":
            elephant_simulator()
        elif command == "casino":
            nano_casino()
        elif command == "zoo":
            nano_zoo()
        elif command == "hackersim":
            nano_hackersim()
        elif command == "treasure":
            nano_treasure_hunt()
        elif command == "citybuilder":
            nano_city_builder()

        else:
            print("Unknown command:", command)

if __name__ == "__main__":
    if login():
        nano_os()

